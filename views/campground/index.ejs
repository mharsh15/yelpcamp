<% layout('./layouts/boilerplate') %>
	<script>
		const mapboxToken = '<%-process.env.MAPBOX_TOKEN %>';
		const camps = `<%- JSON.stringify({features:campground}) %>`
		console.log(camps)

	</script>
	<div id="cluster-map">

	</div>
	<h1>All Campgrounds</h1>
	<a href="/campground/new">Click here to add a new camp</a>

	<% for(let camp of campground){ %>
		<div class="card mb-3">
			<div class="row">
				<div class="col-md-4">
					<img class="img-fluid" src="<%= camp.images[0].url %> ">

				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">
							<%=camp.title %>
						</h5>

						<p class="card-text">
							<%= camp.description %>
						</p>
						<p class="card-text">
						<p class="text-muted">
							<%= camp.location %>
						</p>
						</p>
						<a class="btn btn-primary"
							href="/campground/<%= camp.id %> ">
							<%= camp.title %>
						</a>

					</div>
				</div>
			</div>

			</a>

		</div>


		<% } %>

			<script src="/js/mapboxIndexRoute.js"></script>