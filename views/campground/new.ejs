<% layout('./layouts/boilerplate') %>
	<script>
		const mapboxToken = '<%-process.env.MAPBOX_TOKEN %>'
	</script>
	<!-- < !-- < div class="row"> -->
	<h1 class="text-center">New Campground</h1>
	<div class="col-md-6 offset-md-3">
		<form action="/campground" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
			<div class="mb-3">
				<label class="form-label" for="title">Name of Camp</label>
				<input class="form-control" type=" text" name="campground[title]" id="title" required>
				<div class="valid-feedback">Looks Good!!!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location of Camp</label>
				<input class="form-control" type="text" name="campground[location]" id="location" required>
				<div class="valid-feedback">Looks Good!!!</div>
			</div>
			<div class="mb3">
				<div id='map'></div>
				<input type="text" class="form-control" name="campground[geometry][longitude]" id="longitude"
					style="visibility:collapse;" required>
				<input type="text" class="form-control" name="campground[geometry][latitude]" id="latitude"
					style="visibility:collapse;" required>
				<div class=" valid-feedback">Looks Good!!!
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" name="campground[description]" id="description" required></textarea>
				<div class="valid-feedback">Looks Good!!!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group">
					<span class="input-group-text">$</span>
					<input class="form-control" aria-label="Dollar amount (with dot and two decimal places)"
						type="number" name="campground[price]" id="price" required>
				</div>
				<div class="valid-feedback">Looks Good!!!</div>
			</div>
			<!-- <div class="mb-3">
				<label class="form-label" for="image">Image URL</label>
				<input class="form-control" type="text" name="campground[image]" id="image" required>
				<div class="valid-feedback">Looks Good!!!</div>
			</div> -->

			<div class="mb-3">
				<label class="formFileMultiple" for="image">Add Image </label>
				<input class="form-control" type="file" name="campground[image]" id="image" required multiple>
				<div class="valid-feedback">Looks Good!!!</div>
			</div>

			<div class="mb-3">
				<button class="btn btn-success">Add New Camp</button>
			</div>

		</form>

		<script src="/js/mapboxNewMapRoute.js"></script>